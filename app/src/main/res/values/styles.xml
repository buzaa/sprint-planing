<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/jtx_blue</item>
        <item name="colorPrimaryDark">@color/jtx_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Button_Board">
        <item name="android:background">@drawable/button_number_background_status</item>
        <item name="android:textSize">@dimen/size_40</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button_Bottom">
        <item name="android:background">@drawable/circle_background_status</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextViewHeader">
        <item name="android:background">@color/grey</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AboutItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/bg_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:onClick">onClick</item>
    </style>

</resources>
